program         :

declaration     :expression T_SEMI
                |function_declaration T_SEMI
                |declaration expression T_SEMI
                |declaration function_declaration T_SEMI
                ;

expression      :type T_ID
                |expression T_ASSIGN number
                |expression T_COMMA T_ID
                |expression T_ASSIGN T_LBRACE parameter_list T_RBRACE
                ;

parameter_list  :number
                |parameter_list T_COMMA number
                |number T_ASSIGN number
                ;

function_declaration    :data_type T_ID T_LPAREN data_type_list T_RPAREN
                        ;

data_type_list          :data_type
                        |data_type_list T_COMMA data_type
                        ;

number          :DIGIT
                |CHARACTER
                ;

data_type	    :T_INTEGER
				|T_CHAR
			    ;

/////////
typename        : type
                | T_ID
                ;